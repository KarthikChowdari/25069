{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16"
  },
  "include": ["src", "lib", "data"],          // include real code
  "exclude": ["node_modules", "**/*.test.ts"] // exclude only test files
}